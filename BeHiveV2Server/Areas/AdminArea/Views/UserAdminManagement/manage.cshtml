@using BeHiveV2Server.Services.Database.Models;
@model UserIdentity

@{
    ViewData["Title"] = "manage";
    Layout = "~/Views/Shared/_LayoutDefault.cshtml";
}

<div class="container-fluid">
    <div aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item" aria-current="page">
                <a href="/admin">admin</a>
            </li>
            <li class="breadcrumb-item" aria-current="page">
                 <a href="/admin/users">users</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                manage
            </li>
            <li class="breadcrumb-item active" aria-current="page">
                @Model.Id
            </li>
        </ol>
    </div>
    <h2>@Model.UserName</h2>

    <div class="container-fluid p-4 border border-dark mb-3">
        <h5 class="mb-2">Id: @Model.Id</h5>
        <h5 class="mb-2">Name: @Model.UserName</h5>
        <h5 class="mb-2">Email: @Model.Email</h5>

        <h3 class="text-danger">Funkce nefungují!!!</h3>

        <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                Edit
            </button>
            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#modalChangeName">change name</a></li>
                <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#modalChangeEmail">change email</a></li>
                <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#modalChangePassword">change password</a></li>
                <li><a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#modalDelete">delete</a></li>
            </ul>
        </div>

        <div class="modal fade" id="modalChangeName">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title fs-5">Change username</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form action="/admin/users/changeName/@Model.Id" method="post">
                        <div class="modal-body">
                            <label for="NameInput" class="form-label">User name:</label>
                            <input type="text" class="form-control" id="NameInput" name="newName" value="@Model.UserName">
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="modal fade" id="modalChangeEmail">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title fs-5">Change email</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form action="/admin/users/changeEmail/@Model.Id" method="post">
                        <div class="modal-body">
                            <label for="EmailInput" class="form-label">Email:</label>
                            <input type="email" class="form-control" id="EmailInput" name="email" value="@Model.Email">
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="modal fade" id="modalChangePassword">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title fs-5">Change password</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form action="/admin/users/changePassword/@Model.Id" method="post">
                        <div class="modal-body">
                            <label for="PasswordInput" class="form-label">Password:</label>
                            <input type="text" class="form-control" id="PasswordInput" name="password">
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn btn-primary">Save changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="modal fade" id="modalDelete">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title fs-5">Delete</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to remove user @Model.UserName from this site?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <a href="#" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12 col-lg-6">
            <h3>Roles</h3>
        </div>
        <div class="col-12 col-lg-6">
            <h3>Owned devices</h3>
        </div>
        <div class="col-12 col-lg-6">
            <h3>Used devices</h3>
        </div>
    </div>
</div>